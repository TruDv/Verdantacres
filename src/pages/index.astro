<script is:global>
  document.addEventListener('DOMContentLoaded', () => {
    const slides = document.querySelectorAll('.carousel-item');
    const indicators = document.querySelectorAll('#carousel-indicators div');
    let currentSlide = 0;
    const slideInterval = 5000;

    function showSlide(index) {
      slides.forEach((slide, i) => {
        if (i === index) {
          slide.classList.add('active');
          // Bring the active slide to the front immediately
          slide.style.zIndex = 10; 
        } else {
          slide.classList.remove('active');
          // Push non-active slides to the back after a delay
          setTimeout(() => {
            slide.style.zIndex = 0;
          }, 1000); // Delay matches the typical transition time
        }
      });
      
      // Update Indicators
      indicators.forEach((indicator, i) => {
        if (i === index) {
          indicator.classList.remove('opacity-40', 'w-12');
          indicator.classList.add('opacity-90', 'w-16');
        } else {
          indicator.classList.add('opacity-40', 'w-12');
          indicator.classList.remove('opacity-90', 'w-16');
        }
      });
      currentSlide = index;
    }

    function nextSlide() {
      let next = (currentSlide + 1) % slides.length;
      showSlide(next);
    }

    // Initialize the slides and start the timer
    showSlide(currentSlide); 
    let autoSlideTimer = setInterval(nextSlide, slideInterval);

    indicators.forEach(indicator => {
      indicator.addEventListener('click', (e) => {
        clearInterval(autoSlideTimer);
        const slideIndex = parseInt(e.target.dataset.slide);
        showSlide(slideIndex);
        autoSlideTimer = setInterval(nextSlide, slideInterval);
      });
    });
  });
</script>