---
// src/pages/about.astro
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---
<Layout title="About Us | Verdant Acres Limited — Integrated Coconut Value Chain">

    <!-- FONT AWESOME FOR ICONS (Needed for Core Values and Mission/Vision icons) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" xintegrity="sha512-SnH5WK+bZxgPHs44uWIX+LLMDJzLwV8pA0/DkU8T9z+K+k7pQkU2qJ1iT9G8wA5p8p+R/9yC7b+7Gk5c8eA==" crossorigin="anonymous" referrerpolicy="no-referrer" slot="head-end" />

    <!-- 
        Define custom brand colors using CSS variables. 
        This is necessary as the colors (primary, corporate, surface) 
        are not defined in your provided Layout.astro or a global config.
    -->
    <style>
        :root {
            --color-primary: #DAA520; /* Gold */
            --color-corporate: #1B5E20; /* Deep Green */
            --color-surface: #FAFAFA; /* Light Grey */
        }
        /* Custom Tailwind/CSS mappings for variables to allow use of classes like bg-corporate */
        .text-primary { color: var(--color-primary); }
        .bg-primary { background-color: var(--color-primary); }
        .border-primary { border-color: var(--color-primary); }
        .text-corporate { color: var(--color-corporate); }
        .bg-corporate { background-color: var(--color-corporate); }
        .border-corporate { border-color: var(--color-corporate); }
        .bg-surface { background-color: var(--color-surface); }
        
        /* Font mappings based on your Layout.astro imports */
        .font-heading { font-family: 'Satoshi', sans-serif; }
        .font-signature { font-family: 'Dancing Script', cursive; }
    </style>

    <!-- Header Component slotted into the "header" slot of Layout.astro -->
    <Header slot="header" />

    <!-- HERO SECTION - About (Goes into the default slot <slot />) -->
    <section class="relative h-screen min-h-[600px] flex items-center justify-center overflow-hidden bg-gradient-to-br from-corporate/95 to-corporate">
        <!-- Consistent responsive padding applied here: px-4 sm:px-6 lg:px-8 -->
        <div class="absolute inset-0">
            <img
                src="/assets/Refinery.jpg"
                alt="Verdant Acres Aerial Plantation"
                class="w-full h-full object-cover opacity-40"
                onerror="this.src='https://placehold.co/1920x1080/1B5E20/111827?text=Verdant+Acres+Plantation'"
            />
            <!-- Dark overlay and gradient -->
            <div class="absolute inset-0 bg-gradient-to-t from-corporate via-corporate/70 to-transparent"></div>
        </div>

        <!-- Consistent responsive padding applied here: px-4 sm:px-6 lg:px-8 -->
        <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center text-white">
            <!-- REDUCED FONT SIZE: text-5xl md:text-7xl lg:text-8xl -> text-4xl md:text-6xl lg:text-7xl -->
            <h1 class="text-4xl md:text-6xl lg:text-7xl font-black font-heading leading-tight mb-4 md:mb-6">
                Pioneering West Africa's <br class="hidden lg:block"/>
                <span class="text-primary">Coconut Revolution</span>
            </h1>
            <!-- REDUCED FONT SIZE: text-xl md:text-2xl -> text-lg md:text-xl -->
            <p class="text-lg md:text-xl font-light max-w-4xl mx-auto opacity-95 leading-relaxed">
                11,000 hectares under development • 22 TPD modern mill • Zero-waste • Export-ready • Fully integrated from farm to final product
            </p>
        </div>
    </section>

    <!-- ABOUT US INTRODUCTION -->
    <section class="py-24 bg-white">
        <!-- Consistent responsive padding applied here: px-4 sm:px-6 lg:px-8 -->
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
                <div>
                    <!-- REDUCED FONT SIZE: text-4xl md:text-5xl -> text-3xl md:text-4xl -->
                    <h2 class="text-3xl md:text-4xl font-black font-heading text-corporate mb-8">
                        Building Nigeria's Most Ambitious Coconut Value Chain
                    </h2>
                    <div class="space-y-6 text-lg text-gray-700 leading-relaxed">
                        <p>
                            Verdant Acres Limited is an emerging agribusiness enterprise established to lead the development, management, and operation of fully integrated agricultural value chains in Nigeria. We are strategically positioned as a leader in the nation’s coconut oil sector, operating a state-of-the-art <strong class="text-corporate">22-ton-per-day coconut processing facility</strong>.
                        </p>
                        <p>
                            Powered by a commitment to operational excellence, we combine modern processing technology, strong governance structures, and industry expertise to deliver high-quality products that meet the demands of both domestic and export markets.
                        </p>
                        <p class="text-corporate font-bold">
                            Our strategy is centered on maximizing value addition at every stage — sourcing raw materials, processing at industrial scale, and delivering traceable, market-ready products with consistent quality.
                        </p>
                    </div>
                </div>
                <div class="relative rounded-3xl overflow-hidden shadow-2xl">
                    <img
                        src="/assets/chairman2.jpg"
                        alt="Chairman Uwadiale Agenmonmen"
                        class="w-full h-full object-cover min-h-[300px] md:min-h-[400px]"
                        onerror="this.src='https://placehold.co/800x600/1B5E20/FAFAFA?text=Chairman'"
                    />
                    <div class="absolute inset-0 bg-gradient-to-t from-corporate/50 to-transparent flex items-end p-6 md:p-10">
                        <div class="text-white">
                            <p class="text-2xl md:text-3xl font-black font-heading">Uwadiale Agenmonmen</p>
                            <p class="text-lg opacity-90">Founder & Chairman</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- MISSION & VISION - REDUCED TOP PADDING (pt-24) and REDUCED GAP (gap-12) -->
    <section class="pt-24 pb-40 bg-surface">
        <!-- Consistent responsive padding applied here: px-4 sm:px-6 lg:px-8 -->
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <!-- REDUCED FONT SIZE: text-4xl md:text-5xl -> text-3xl md:text-4xl -->
            <h2 class="text-center text-3xl md:text-4xl font-black font-heading text-corporate mb-12 md:mb-16">Our Purpose & Ambition</h2>
            
            <!-- REDUCED GAP: gap-16 -> gap-12 -->
            <div class="grid sm:grid-cols-2 gap-8 md:gap-12 max-w-5xl mx-auto items-stretch">
                
                <!-- MISSION CARD: Generous internal padding (p-10 md:p-14) -->
                <div class="bg-white rounded-3xl p-10 md:p-14 shadow-2xl border-t-4 border-primary hover:shadow-3xl transition-all duration-500 group flex flex-col h-full">
                    <div class="w-16 h-16 md:w-20 md:h-20 bg-primary/10 rounded-full flex items-center justify-center mb-6 md:mb-8 group-hover:bg-primary transition-colors flex-shrink-0">
                        <i class="fas fa-bullseye text-3xl md:text-4xl text-primary group-hover:text-white"></i>
                    </div>
                    <h3 class="text-2xl md:text-3xl font-black font-heading text-corporate mb-4 md:mb-6 flex-shrink-0">Our Mission</h3>
                    <p class="text-base md:text-lg text-gray-700 leading-relaxed mb-8">
                        To develop a fully integrated coconut processing system that combines efficient production, farmer empowerment, and sustainable practices to deliver premium Virgin Coconut Oil for food, cosmetic, and pharmaceutical industries.
                    </p>
                    <a href="/about#mission-details" class="mt-auto inline-flex items-center text-corporate font-bold hover:text-primary transition-colors">
                        Read Our Full Strategy
                        <i class="fas fa-arrow-right ml-2 text-sm"></i>
                    </a>
                </div>
                
                <!-- VISION CARD: Generous internal padding (p-10 md:p-14) -->
                <div class="bg-white rounded-3xl p-10 md:p-14 shadow-2xl border-t-4 border-corporate hover:shadow-3xl transition-all duration-500 group flex flex-col h-full">
                    <div class="w-16 h-16 md:w-20 md:h-20 bg-corporate/10 rounded-full flex items-center justify-center mb-6 md:mb-8 group-hover:bg-corporate transition-colors flex-shrink-0">
                        <i class="fas fa-mountain text-3xl md:text-4xl text-corporate group-hover:text-white"></i>
                    </div>
                    <h3 class="text-2xl md:text-3xl font-black font-heading text-corporate mb-4 md:mb-6 flex-shrink-0">Our Vision</h3>
                    <p class="text-base md:text-lg text-gray-700 leading-relaxed mb-8">
                        To become a leading producer of high-quality Virgin Coconut Oil in West Africa, driving sustainable growth across the coconut value chain and promoting Nigeria’s position in the global natural oils market.
                    </p>
                    <a href="/about#vision-details" class="mt-auto inline-flex items-center text-corporate font-bold hover:text-primary transition-colors">
                        Explore Our Growth Plan
                        <i class="fas fa-arrow-right ml-2 text-sm"></i>
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- CORE VALUES - ENSURED RESPONSIVE CONTAINER (px-4 sm:px-6 lg:px-8) IS PRESENT -->
    <section class="py-24 bg-white">
        <!-- Consistent responsive padding applied here: px-4 sm:px-6 lg:px-8 -->
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
            <!-- REDUCED FONT SIZE: text-4xl md:text-5xl -> text-3xl md:text-4xl -->
            <h2 class="text-3xl md:text-4xl font-black font-heading text-corporate mb-16">Core Values That Define Us</h2>
            <div class="grid grid-cols-2 md:grid-cols-4 gap-8 md:gap-10">
                <div class="group p-6"> <!-- Increased internal padding here too -->
                    <div class="w-20 h-20 md:w-24 md:h-24 bg-green-50 rounded-full flex items-center justify-center mx-auto mb-4 md:mb-6 text-corporate group-hover:bg-corporate group-hover:text-white transition-all duration-300">
                        <i class="fas fa-award text-3xl md:text-4xl"></i>
                    </div>
                    <h3 class="text-xl md:text-2xl font-black font-heading mb-2">Quality</h3>
                    <p class="text-sm md:text-base text-gray-600">Highest quality certified products under strict process standards</p>
                </div>
                <div class="group p-6"> <!-- Increased internal padding here too -->
                    <div class="w-20 h-20 md:w-24 md:h-24 bg-green-50 rounded-full flex items-center justify-center mx-auto mb-4 md:mb-6 text-corporate group-hover:bg-corporate group-hover:text-white transition-all duration-300">
                        <i class="fas fa-leaf text-3xl md:text-4xl"></i>
                    </div>
                    <h3 class="text-xl md:text-2xl font-black font-heading mb-2">Sustainability</h3>
                    <p class="text-sm md:text-base text-gray-600">Ethical sourcing and environmentally responsible operations</p>
                </div>
                <div class="group p-6"> <!-- Increased internal padding here too -->
                    <div class="w-20 h-20 md:w-24 md:h-24 bg-green-50 rounded-full flex items-center justify-center mx-auto mb-4 md:mb-6 text-corporate group-hover:bg-corporate group-hover:text-white transition-all duration-300">
                        <i class="fas fa-dollar-sign text-3xl md:text-4xl"></i>
                    </div>
                    <h3 class="text-xl md:text-2xl font-black font-heading mb-2">Affordability</h3>
                    <p class="text-sm md:text-base text-gray-600">Competitive pricing making VCO accessible to all industries</p>
                </div>
                <div class="group p-6"> <!-- Increased internal padding here too -->
                    <div class="w-20 h-20 md:w-24 md:h-24 bg-green-50 rounded-full flex items-center justify-center mx-auto mb-4 md:mb-6 text-corporate group-hover:bg-corporate group-hover:text-white transition-all duration-300">
                        <i class="fas fa-headset text-3xl md:text-4xl"></i>
                    </div>
                    <h3 class="text-xl md:text-2xl font-black font-heading mb-2">Customer Service</h3>
                    <p class="text-sm md:text-base text-gray-600">Open communication and reliable support for all partners</p>
                </div>
            </div>
        </div>
    </section>

    <!-- CHAIRMAN'S MESSAGE -->
    <section class="py-28 bg-corporate text-white relative overflow-hidden">
        <div class="absolute inset-0 bg-gradient-to-br from-primary/20 to-transparent"></div>
        <!-- Consistent responsive padding applied here: px-4 sm:px-6 lg:px-8 -->
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
            <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
                <div>
                    <!-- Image wrapper already responsive -->
                    <img
                        src="/assets/Refinery1.jpg"
                        alt="Chairman Uwadiale Agenmonmen"
                        class="rounded-3xl shadow-2xl w-full"
                        onerror="this.src='https://placehold.co/800x800/1B5E20/FAFAFA?text=Chairman'"
                    />
                </div>
                <div class="space-y-8">
                    <div>
                        <span class="inline-block px-4 py-2 bg-primary/20 text-primary font-bold rounded-full text-sm uppercase tracking-wider mb-6">
                            Chairman's Message
                        </span>
                        <!-- REDUCED FONT SIZE: text-4xl md:text-5xl -> text-3xl md:text-4xl -->
                        <h2 class="text-3xl md:text-4xl font-black font-heading mb-8">
                            One of West Africa's Most Ambitious Coconut Expansion Programmes
                        </h2>
                    </div>
                    <blockquote class="text-xl md:text-2xl leading-relaxed italic opacity-95 border-l-4 border-primary pl-6">
                        "We are building an 11,000-hectare integrated coconut plantation — advancing national self-sufficiency, creating substantial rural employment, and ensuring consistent, high-quality supply for both domestic and export markets."
                    </blockquote>
                    <div class="pt-8 border-t border-white/20">
                        <!-- Uses the script/signature font from your layout -->
                        <p class="text-3xl font-signature text-primary">Uwadiale Agenmonmen</p>
                        <p class="text-lg font-bold">Founder & Chairman</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- FINAL CTA -->
    <section class="py-24 bg-surface text-center">
        <!-- Consistent responsive padding applied here: px-4 sm:px-6 lg:px-8 -->
        <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
            <!-- REDUCED FONT SIZE: text-4xl md:text-5xl -> text-3xl md:text-4xl -->
            <h2 class="text-3xl md:text-4xl font-black font-heading text-corporate mb-8">
                Ready to Partner on the Future of African Agribusiness?
            </h2>
            <p class="text-xl text-gray-600 mb-12 max-w-3xl mx-auto">
                Join us in building West Africa’s largest integrated coconut platform — secure supply, sustainable impact, and strong returns.
            </p>
            <div class="flex flex-col sm:flex-row gap-6 justify-center">
                <a href="/contact" class="bg-corporate text-white font-bold text-lg py-5 px-12 rounded-full hover:bg-primary hover:text-gray-900 transition duration-300 shadow-xl">
                    Explore Partnership Opportunities
                </a>
                <a href="/products" class="border-2 border-corporate text-corporate font-bold text-lg py-5 px-12 rounded-full hover:bg-corporate hover:text-white transition duration-300">
                    View Our Products
                </a>
            </div>
        </div>
    </section>

    <!-- Footer Component slotted into the "footer" slot of Layout.astro -->
    <Footer slot="footer" />

</Layout>